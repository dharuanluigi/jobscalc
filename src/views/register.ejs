	<link rel="stylesheet" type="text/css" href="/styles/partials/page-header-login.css" />
	<link rel="stylesheet" href="/styles/partials/animations.css" />
  <!--===============================================================================================-->

</head>
<body>
	<header class="login100-form-title page-header">
		<div class="principal-title">
			<span>
				Bem-vindo ao
			</span>
			<span class="JobsCalc">
				JobsCalc
			</span>
		</div>
		<span class="login100-form-avatar">
			<img src="/images/user_icon_white.svg" alt="avatar do usuário">
		</span>
	</header>
	<div class="limiter">
		<div class="container-login100">
			<div class="wrap-login100">
				<form class="login100-form validate-form" method="POST" action="/register">
					<div class="wrap-input100 validate-input m-b-35 animate-up delay-1" data-validate = "Enter username">
						<input class="input100" type="text" name="login">
						<span class="focus-input100" data-placeholder="Usuário"></span>
					</div>

					<div class="wrap-input100 validate-input m-b-35 animate-up delay-2" data-validate = "Enter mail">
						<input class="input100" type="email" name="mail">
						<span class="focus-input100" data-placeholder="E-mail"></span>
					</div>

					<div class="wrap-input100 validate-input m-b-50 animate-up delay-3" data-validate="Enter password">
						<input class="input100" type="password" name="password">
						<span class="focus-input100" data-placeholder="Senha"></span>
					</div>

					<div class="container-login100-form-btn animate-up delay-4">
						<button class="login100-form-btn">
							Registrar
						</button>
						<div id="login_error">
							<% if(msg) { %>
								<%= msg %> 
							<% } %>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>

	<div id="dropDownSelect1"></div>
	
<!--===============================================================================================-->
	<script src="/scripts/vendor/jquery/jquery-3.2.1.min.js"></script>
